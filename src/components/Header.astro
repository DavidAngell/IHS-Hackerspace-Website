---
import Logo from './Logo.astro'
import Nav from './Nav.astro'

const { current = '' } = Astro.props;
---

<style>
  header {
    display: flex;
    margin: 0 auto;
    max-width: 1400px;
    padding: 2em;
    width: 100%;
    flex-wrap: wrap;
  }

  @media (max-width: 800px) {
    header {
      justify-content: center;
    }
  }
</style>

<header>
  <Logo className="logo" />
  <Nav current={current} />
</header>
