---
import BaseLayout from '@layouts/BaseLayout.astro';
import HrHeading from '@components/HrHeading.astro';

const title = 'IHS Hackerspace: Team Blog';
const description = 'Musings of our team.';
const permalink = `${Astro.site.href}blog`;

let allPosts = await Astro.glob('../../data/blog-posts/*.md');
allPosts = allPosts.sort((a, b) => new Date(b.frontmatter.publishDate).valueOf() - new Date(a.frontmatter.publishDate).valueOf());
---

<BaseLayout title={title} description={description} permalink={permalink} current="blog">
  <div class="container">
    <HrHeading headingSize="h1">Team Blog</HrHeading>
    {allPosts.map((post, index) => {
      const href = `/blog/${post.file.split('/').pop().split('.').shift()}`;
      return (
        <div class="post-block">
          <a href={href}>
            <div class="post-item">
              <h2>{post.frontmatter.title}</h2>
              <p>{post.frontmatter.description}</p>
              <div class="post-item-footer">
                <span class="post-item-date">â€” {post.frontmatter.publishDate}</span>
              </div>
            </div>
          </a>
        </div>
      )
    })}
  </div>
</BaseLayout>

<style>
  h2,
  .post-item-footer {
    font-family: var(--font-family-sans);
    font-weight: 700;
  }

  .post-item-date {
    color: var(--text-secondary);
    text-align: left;
    text-transform: uppercase;
    margin-right: 16px;
  }

  a {
    all: unset;
    text-decoration: none;
    cursor: pointer;
  }

  .container {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .post-item {
    transition: all 250ms ease-in;
    padding: 1rem 1rem 2rem 2rem;
    border-radius: 10px;
    margin: 0 auto;
    cursor: pointer;
    background-color: var(--background-body-alt);
  }

  .post-item:hover {
    box-shadow: 0 2px 2px rgba(var(--primary-color-rgb), 0.5);
    transform: translateY(-3px);
  }

  p {
    color: var(--text-main);
  }

  .container h1 {
    margin-bottom: 0 !important;
    padding-bottom: 0;
  }

  @media (max-width: 800px) {
    h1 {
      text-align: center;
    }
  }
</style>
