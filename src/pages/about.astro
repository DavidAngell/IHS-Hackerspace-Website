---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'About Us';
const description = 'About the IHS Hackerspace team.';
const permalink = `${Astro.site.href}about`;

import { ourMission, memberList } from '../data/projects-data';
---

<BaseLayout title={title} description={description} permalink={permalink} current="about">
  <div class="container">
    <h1>About</h1>
    <h2>Our Mission</h2>
    <p>{ourMission}</p>

    <h2>Meet the Team</h2>
    <div class="people">
      {
        memberList.leaders.map(leader => {
          return (
            <div class="member-container">
              <h3>{leader.title}</h3>
              <img src={leader.image} alt={"Picture of " + leader.name}/>
              <h4>{leader.name}</h4>
              <p>{leader.bio}</p>
            </div>
          )
        })
      }
    </div>
  </div>
</BaseLayout>

<style>
  .member-container {
    width: calc(50% - 2rem);
    margin-bottom: 4rem;
    min-width: 375px;
    margin: 1rem;
  }

  .member-container img {
    border-radius: 10px;
    margin-bottom: 1rem;
    object-fit: cover;
    min-width: 100%;
    height: 70%;
    width: auto;
  }


  .container h2 {
    margin-bottom: 2rem;
  }

  .people {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
  }

  @media (max-width: 800px) {

    .container h1,
    .container h2,
    .container h3,
    .container h4,
    .container h5,
    .container h6 {
      text-align: center;
    }
    .container {
      width: 80%;
    }

    p {
      padding-left: 2rem;
      padding-right: 2rem;
    }

    .member-container {
      width: 80%;
      margin-bottom: 4rem;
      min-width: 375px;
    }
  }
</style>
