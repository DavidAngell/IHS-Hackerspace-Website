---
import BaseLayout from '@layouts/BaseLayout.astro';

const title = 'IHS Hackerspace: Projects';
const description = 'IHS Hackerspace projects.';
const permalink = `${Astro.site.href}projects`;

import { ongoingProjects, pastProjects } from '../data/projects-data';
---

<BaseLayout title={title} description={description} permalink={permalink} current="projects">
  <div class="container">
    <h1>Ongoing Projects</h1>
    <hr />
    <div class="projects">
      {
        ongoingProjects.map(project => {
          return (
            <div class="project-container">
              <h3>{project.name}</h3>
              <a href={project.blogPost}>
                <img loading="lazy" src={project.image} alt={"Picture of " + project.name}/>
              </a>
              <p>{project.description}</p>
            </div>
          )
        })
      }
    </div>

    <h1>Finished Projects</h1>
    <hr />
    <div class="projects">
      {
        pastProjects.map(project => {
          return (
            <div class="project-container">
              <h3>{project.name}</h3>
              <a href={project.blogPost}>
                <img loading="lazy" src={project.image} alt={"Picture of " + project.name}/>
              </a>
              <p>{project.description}</p>
            </div>
          )
        })
      }
    </div>
  </div>
</BaseLayout>

<style>
  .project-container {
    width: calc(50% - 2rem);
    min-width: 375px;
    padding-bottom: 1.75rem;
    margin-left: 1rem;
    margin-right: 1rem;
  }

  .project-container img {
    border-radius: 10px;
    object-fit: cover;
    min-width: 100%;
    height: 40vh;
    width: auto;
    transition: all 250ms ease-in;
    cursor: pointer;
    background-color: var(--background-body-alt);

  }

  .project-container img:hover {
    box-shadow: 0 2px 2px rgba(var(--primary-color-rgb), 0.5);
    transform: translateY(-3px);
  }

  .container h1,
  .container h2 {
    margin-bottom: 1.5rem;
  }

  .container h3 {
    margin-bottom: 1rem;
  }

  .projects {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    margin-left: -1rem;
    margin-right: -1rem;
    padding-bottom: 2rem;
  }

  p {
    margin-top: 1rem;
  }

  hr {
    margin-top: 0px !important;
  }

  @media (max-width: 800px) {

    .container h1,
    .container h2,
    .container h3,
    .container h4,
    .container h5,
    .container h6 {
      text-align: center;
    }
    .container {
      width: 80%;
    }

    hr {
      width: 80%;
    }

    p {
      padding-left: 2rem;
      padding-right: 2rem;
      text-align: center;
    }

    .project-container {
      width: 80%;
      min-width: 375px;
      padding-bottom: 1rem;
    }
  }
</style>